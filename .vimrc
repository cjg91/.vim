inoremap jk <ESC>
let mapleader = "'"
set noswapfile
set number
set hlsearch
set ignorecase
set incsearch

filetype plugin indent on
syntax on
set encoding=utf-8
set clipboard=unnamed

" show existing tab with 4 spaces width
set tabstop=2
" when indenting with '>', use 4 spaces width
set shiftwidth=2
" On pressing tab, insert 4 spaces
set expandtab

